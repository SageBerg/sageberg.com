<% numbers_to_month_abreviations = { 1 => "Jan", 2 => "Feb", 3 => "Mar",
                                     4 => "Apr", 5 => "May", 6 => "Jun",
                                     7 => "Jul", 8 => "Aug", 9 => "Sep",
                                     10 => "Oct", 11 => "Nov", 12 => "Dec"} %>

<% @weeks = get_first_day_of_each_week_for_a_year %>

<div class="month_labels">
  <div class="month_label"></div> <!-- for formatting -->
  <% current_month = @weeks[0].month %>
  <% for start_of_week in @weeks %>
    <div class="month_label">
    <% if current_month != start_of_week.month %>
      <%= numbers_to_month_abreviations[start_of_week.month] %>
      <% current_month = start_of_week.month %>
    <% end %>
    </div>
  <% end %>
</div>

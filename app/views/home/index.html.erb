  <button class="site_nav_button" onclick="jumpTo('colors_game')">Color Guessing Game</button>
</header>

<%= render file: "~/sageberg.com/app/views/_about_me" %>

<%= render file: "~/sageberg.com/app/views/_other_projects" %>

<%= render file: "~/sageberg.com/app/views/_colors_game" %>

<script>
  function jumpTo(id) {
    window.location.hash = "#" + id;
    return false;
  }
</script>
